{
	"manifest_version": 2,

	"name": "LiveCoding Chroma Screen",
	"description": "Something really nice ^^",
	"version": "0.1",

	"permissions": [
        "http://*/*",
        "https://*/*",
        "notifications",
        "tabs"
    ],

	"content_scripts": [
		{
			"matches": ["https://www.livecoding.tv/*/settings/transactions/"],
			"js": [
				"includes/scripts/jquery.js",
				"scrap_live_transactions.js"
			]
		},
		{
			"matches": ["https://www.livecoding.tv/fiote/"],
			"js": [
				"includes/scripts/jquery.js",
				"bot_livecoding.js"
			]
		},
		{
			"matches": ["*://www.deezer.com/*"],
			"js": [
				"includes/scripts/jquery.js",
				"scrap_deezer.js"
			],
			"run_at" :"document_end"
		}

	],

	"background": {	
		"page": "background.html"
	},

	"icons": { 
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png" 
	},
  
	"browser_action": {
		"default_popup": "popup.html"
	},
	
	"web_accessible_resources": [
		"bot_livecoding_agent.js",
		"scrap_deezer_agent.js"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval' https://example.com; object-src 'self'"
}
